<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F4F4F"
    tools:context=".sign_up">

    <EditText
        android:id="@+id/editpassword"
        android:layout_width="306dp"
        android:layout_height="55dp"
        android:background="@drawable/password"
        android:ems="10"
        android:hint="密碼"
        android:inputType="textPassword"
        android:paddingLeft="55dp"
        android:textColor="#fb0"
        android:textColorHint="#fb0"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227" />

    <EditText
        android:id="@+id/editpassword2"
        android:layout_width="306dp"
        android:layout_height="55dp"
        android:background="@drawable/password"
        android:ems="10"
        android:hint="確認密碼"
        android:inputType="textPassword"
        android:paddingLeft="55dp"
        android:textColor="#fb0"
        android:textColorHint="#fb0"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.338" />

    <EditText
        android:id="@+id/editusername"
        android:layout_width="306dp"
        android:layout_height="55dp"
        android:background="@drawable/name"
        android:ems="10"
        android:hint="帳號"
        android:inputType="textPersonName"
        android:paddingLeft="55dp"
        android:textColor="#fb0"
        android:textColorHint="#fb0"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119" />

    <Button
        android:id="@+id/editforgot"
        android:layout_width="211dp"
        android:layout_height="40dp"
        android:background="@drawable/forget_btm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" />

    <TextView
        android:id="@+id/sighed"
        android:layout_width="211dp"
        android:layout_height="40dp"
        android:background="@drawable/signedup"
        app:layout_constraintBottom_toTopOf="@+id/editforgot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editregister2" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="336dp"
        android:layout_height="42dp"
        android:visibility="gone"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editregister2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.689" />

    <EditText
        android:id="@+id/editemail"
        android:layout_width="306dp"
        android:layout_height="55dp"
        android:background="@drawable/email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="55dp"
        android:textColor="#fb0"
        android:textColorHint="#fb0"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.449" />

    <EditText
        android:id="@+id/editTextname"
        android:layout_width="306dp"
        android:layout_height="55dp"
        android:background="@drawable/minim"
        android:ems="10"
        android:hint="暱稱"
        android:inputType="textPersonName"
        android:paddingLeft="55dp"
        android:textColor="#fb0"
        android:textColorHint="#fb0"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.556" />

    <Button
        android:id="@+id/editregister2"
        android:layout_width="365dp"
        android:layout_height="63dp"
        android:background="@drawable/signup_btm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.723" />

</androidx.constraintlayout.widget.ConstraintLayout>