<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#FFF0D4"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:background="#FFF0D4"
            android:layout_marginTop="50sp">
            <TableRow
                 android:gravity="center_horizontal"
               >
                <ImageButton
                android:id="@+id/btnx"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:paddingRight="80sp"
                android:layout_marginRight="50sp"
                android:background="@drawable/x"
           />
                <Button
                    android:id="@+id/btnInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聖安健保-神經內科科診"
                    style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                 android:background="@color/common_google_signin_btn_text_dark_disabled"

                    />

                <ImageButton
                    android:id="@+id/btnplus"
                    android:layout_width="50sp"
                    android:layout_height="50sp"

android:layout_marginLeft="50sp"
                    android:background="@drawable/plus"
android:visibility="invisible"
                    />
            </TableRow>



            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="50sp"
                >
                <ImageButton
                    android:id="@+id/btnx2"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:paddingRight="50sp"
                    android:layout_marginRight="50sp"
                    android:background="@drawable/x"
                    android:visibility="invisible"
                    />
                <Button
                    android:id="@+id/btnInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尚無藥單資料"
                    style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                    android:background="@color/common_google_signin_btn_text_dark_disabled"

                    />

                <ImageButton
                    android:id="@+id/btnplus2"
                    android:layout_width="50sp"
                    android:layout_height="50sp"

                    android:layout_marginLeft="50sp"
                    android:background="@drawable/plus"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="50sp"
                >
                <ImageButton
                    android:id="@+id/btnx3"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:paddingRight="80sp"
                    android:layout_marginRight="50sp"
                    android:background="@drawable/x"
                    android:visibility="invisible"
                    />
                <Button
                    android:id="@+id/btnInfo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尚無藥單資料"
                    style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                    android:background="@color/common_google_signin_btn_text_dark_disabled"

                    />

                <ImageButton
                    android:id="@+id/btnplus3"
                    android:layout_width="50sp"
                    android:layout_height="50sp"

                    android:layout_marginLeft="50sp"
                    android:background="@drawable/plus"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="50sp"
                >
                <ImageButton
                    android:id="@+id/btnx4"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:paddingRight="80sp"
                    android:layout_marginRight="50sp"
                    android:background="@drawable/x"
                    android:visibility="invisible"
                    />
                <Button
                    android:id="@+id/btnInfo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尚無藥單資料"
                    style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                    android:background="@color/common_google_signin_btn_text_dark_disabled"

                    />

                <ImageButton
                    android:id="@+id/btnplus4"
                    android:layout_width="50sp"
                    android:layout_height="50sp"

                    android:layout_marginLeft="50sp"
                    android:background="@drawable/plus"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="50sp"
                >
                <ImageButton
                    android:id="@+id/btnx5"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:paddingRight="80sp"
                    android:layout_marginRight="50sp"
                    android:background="@drawable/x"
                    android:visibility="invisible"
                    />
                <Button
                    android:id="@+id/btnInfo5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尚無藥單資料"
                    style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                    android:background="@color/common_google_signin_btn_text_dark_disabled"

                    />

                <ImageButton
                    android:id="@+id/btnplus5"
                    android:layout_width="50sp"
                    android:layout_height="50sp"

                    android:layout_marginLeft="50sp"
                    android:background="@drawable/plus"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="50sp"
                >
                <ImageButton
                    android:id="@+id/btnx6"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:paddingRight="80sp"
                    android:layout_marginRight="50sp"
                    android:background="@drawable/x"
                    android:visibility="invisible"
                    />
                <Button
                    android:id="@+id/btnInfo6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尚無藥單資料"
                    style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                    android:background="@color/common_google_signin_btn_text_dark_disabled"

                    />

                <ImageButton
                    android:id="@+id/btnplus6"
                    android:layout_width="50sp"
                    android:layout_height="50sp"

                    android:layout_marginLeft="50sp"
                    android:background="@drawable/plus"
                    />
            </TableRow>


        </TableLayout>






    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#FFF0D4"

        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnM首頁"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:text="首頁"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnM藥單"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:text="藥單"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnM行事曆"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:text="行事曆"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnM會員"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:text="會員"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnMNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:text="News"
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>

</RelativeLayout>